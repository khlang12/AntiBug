
{
  "name": "antibug",
  "displayName": "AntiBug",
  "description": "AntiBug",
  "icon" : "./images/my-icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],


  "activationEvents": [],
  "main": "./extension.js",


  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "AntiBug-explorer",
          "title": "AntiBug Explorer",
          "icon": "./images/logo.png"
        }
      ]
    },
    "views": {
      "AntiBug-explorer": [
        {
          "id": "deploy",
          "name": "[1] Deploy"
        },
        {
          "id": "security-analysis",
          "name": "[2] Security Analysis"
        }
      ]
    },
    "statusbar": [
      {
        "id": "AntiBug.statusBarIcon",
        "alignment": "right",
        "priority": 100,
        "text": "$(my-icon.png)",
        "tooltip": "AntiBug Icon Tooltip",
        "command": "AntiBug.start",
        "color": "#FFFFFF",
        "icon": "./images/my-icon.png"
      }
    ],
    "commands": [
      {
        "command": "AntiBug.deploy",
        "title": "AntiBug Deploy"
      },
      {
        "command": "AntiBug.security-analysis",
        "title" : "AntiBug Security Analysis"
      },
      {
        "command": "AntiBug.toggleView",
        "title": "Toggle AntiBug View",
        "comment" : "음 이 명령어 안 쓰이는 것 같은데용 그래도 혹시 모르니 냅둔다"
      }
    ]
  },

  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.19.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  }
}